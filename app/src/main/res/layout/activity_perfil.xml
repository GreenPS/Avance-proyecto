<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Perfil"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="-450dp"
        android:orientation="vertical"

        android:background="@drawable/component">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="match_parent">
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginHorizontal="100dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"                />

            <TextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Nombre Usuario "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="Bogota, Colombia"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_marginTop="-150dp">
        <EditText
            android:id="@+id/txt_name_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:layout_marginBottom="-10dp"
            android:hint="Nombre"/>
        <EditText
            android:id="@+id/txt_email_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:layout_marginBottom="-10dp"
            android:hint="E-mail"/>
        <EditText
            android:id="@+id/txt_bio_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:layout_marginBottom="-10dp"
            android:hint="Bio"/>
        <EditText
            android:id="@+id/txt_pass_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:layout_marginBottom="-10dp"
            android:hint="ContraseÃ±a"/>


        <Button
            android:id="@+id/btn_up"
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:padding="30dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:text="Actualizar"
            android:background="@drawable/rectangle1"/>
    </LinearLayout>

  </LinearLayout>